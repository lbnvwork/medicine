{% extends 'knp_menu.html.twig' %}

{% block item %}
	{% import "knp_menu.html.twig" as macros %}
	{% if item.displayed %}
		<li>
			{{ block('linkElement') }}
			{# render the list of children#}
			{{ block('list') }}
		</li>
	{% endif %}
{% endblock %}


{% block linkElement %}
	<a href="{{ item.uri }}">
		{% if item.attribute('icon') is not empty  %}
			<i class="{{ item.attribute('icon') }}"></i>
		{% endif %}
		{{ block('label') }}
	</a>
{% endblock %}
