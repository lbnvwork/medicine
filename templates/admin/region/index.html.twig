{% extends 'admin/index.html.twig' %}
{% block title %}Region index{% endblock %}
{% block h1 %}<h1>Region index</h1>{% endblock %}
{% block right %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Region_number</th>
                <th>Enabled</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                <td>{{ region.id }}</td>
                <td>{{ region.name }}</td>
                <td>{{ region.country.name }}</td>
                <td>{{ region.regionNumber }}</td>
                <td>{{ region.enabled ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('region_show', {'id': region.id}) }}">show</a>
                    <a href="{{ path('region_edit', {'id': region.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('region_new') }}">Create new</a>
{% endblock %}
