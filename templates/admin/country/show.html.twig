{% extends 'admin/index.html.twig' %}

{% block title %}Country{% endblock %}
{% block h1 %}<h1>Country</h1>{% endblock %}
{% block right %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ country.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ country.name }}</td>
            </tr>
            <tr>
                <th>Shortcode</th>
                <td>{{ country.shortcode }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ country.enabled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('country_index') }}">back to list</a>

    <a href="{{ path('country_edit', {'id': country.id}) }}">edit</a>

    {{ include('admin/country/_delete_form.html.twig') }}
{% endblock %}
