{% extends 'admin/index.html.twig' %}

{% block title %}Diagnosis index{% endblock %}
{% block h1 %}<h1>Diagnosis index</h1>{% endblock %}
{% block right %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for diagnosi in diagnoses %}
            <tr>
                <td>{{ diagnosi.id }}</td>
                <td>{{ diagnosi.name }}</td>
                <td>{{ diagnosi.code }}</td>
                <td>
                    <a href="{{ path('diagnosis_show', {'id': diagnosi.id}) }}">show</a>
                    <a href="{{ path('diagnosis_edit', {'id': diagnosi.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('diagnosis_new') }}">Create new</a>
{% endblock %}
